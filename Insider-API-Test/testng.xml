<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Insider API Test Suite" verbose="1" parallel="none" thread-count="1">
    
    <!-- Suite Parameters -->
    <parameter name="environment" value="test"/>
    <parameter name="baseUrl" value="https://petstore.swagger.io/v2"/>
    
    <!-- Listeners -->
    <listeners>
        <!-- Extent Report Listener -->
        <listener class-name="com.insider.api.listeners.ExtentReportListener"/>
        
        <!-- TestNG Default Reporters -->
        <listener class-name="org.testng.reporters.EmailableReporter"/>
        <listener class-name="org.testng.reporters.JUnitReportReporter"/>
    </listeners>
    
    <test name="Store Inventory API" preserve-order="true">
        <classes>
            <class name="com.insider.api.tests.StoreInventoryTest">
                <methods>
                    <include name="testGetStoreInventory_BasicCheck"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <test name="Store Order API (CRUD)" preserve-order="true">
        <classes>
            <class name="com.insider.api.tests.StoreOrderTest">
                <methods>
                    <include name="testCreateStoreOrder_Success"/>
                    <include name="testGetStoreOrderById_Success"/>
                    <include name="testDeleteStoreOrderById_Success"/>
                </methods>
            </class>
        </classes>
    </test>
    
</suite>
